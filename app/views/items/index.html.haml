%h1 Listing items

%table
  %thead
    %tr
      %th Tite
      %th Description
      %th Seller
      %th Status
      %th
      %th
      %th

  %tbody
    - @items.each do |item|
      %tr
        %td= item.tite
        %td= item.description
        %td= item.seller
        %td= item.status
        %td= link_to 'Show', item
        %td= link_to 'Edit', edit_item_path(item)
        %td= link_to 'Destroy', item, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Item', new_item_path
